@{
    Layout = "~/Views/MasterView/Main.cshtml";
}
@model XCLCMS.View.AdminWeb.Models.FriendLinks.FriendLinksAddVM

<form id="mainForm" action="@Model.FormAction" method="post">
    <input type="hidden" id="FriendLinkID" name="FriendLinkID" value="@Model.FriendLinks.FriendLinkID" />

    <div class="XCLAccordion" style="border-top: none;">
        <div class="XCLAccordionHeader">1、基本信息：</div>
        <div class="XCLAccordionBody">
            <table class="XCLTableEdit">

                <tr>
                    <td class="XCLTitle">所属商户号：</td>
                    <td>
                        <input type="text" class="easyui-numberbox" id="txtMerchantID" name="txtMerchantID" value="@Model.FriendLinks.FK_MerchantID" />
                    </td>
                    <td class="XCLTitle">所属应用号：</td>
                    <td><input type="text" class="easyui-numberbox" id="txtMerchantAppID" name="txtMerchantAppID" value="@Model.FriendLinks.FK_MerchantAppID" /></td>
                    <td class="XCLTitle"></td>
                    <td></td>
                </tr>

                <tr>
                    <td class="XCLTitle"><span class="XCLRedBolder">*</span>标题：</td>
                    <td>
                        <input type="text" name="txtTitle" value="@Model.FriendLinks.Title" />
                    </td>
                    <td class="XCLTitle">描述：</td>
                    <td>
                        <textarea name="txtDescription">@Model.FriendLinks.Description</textarea>
                    </td>
                    <td class="XCLTitle">链接地址：</td>
                    <td>
                        <input type="text" name="txtURL" value="@Model.FriendLinks.URL" />
                    </td>
                </tr>

                <tr>
                    <td class="XCLTitle">联系人名：</td>
                    <td>
                        <input type="text" name="txtContactName" value="@Model.FriendLinks.ContactName" />
                    </td>
                    <td class="XCLTitle">电子邮件：</td>
                    <td>
                        <input type="text" name="txtEmail" value="@Model.FriendLinks.Email" />
                    </td>
                    <td class="XCLTitle">QQ：</td>
                    <td>
                        <input type="text" name="txtQQ" value="@Model.FriendLinks.QQ" />
                    </td>
                </tr>
                <tr>
                    <td class="XCLTitle">手机号：</td>
                    <td>
                        <input type="text" name="txtTel" value="@Model.FriendLinks.Tel" />
                    </td>
                    <td class="XCLTitle">其它联系方式：</td>
                    <td>
                        <input type="text" name="txtOtherContact" value="@Model.FriendLinks.OtherContact" />
                    </td>
                    <td class="XCLTitle"></td>
                    <td></td>
                </tr>

                <tr>
                    <td class="XCLTitle">备注：</td>
                    <td>
                        <textarea id="txtRemark" name="txtRemark">@Model.FriendLinks.Remark</textarea>
                    </td>
                    <td class="XCLTitle">记录状态：</td>
                    <td>
                        <select name="selRecordState">
                            @Html.Raw(Model.RecordStateOptions)
                        </select>
                    </td>
                    <td></td>
                    <td></td>
                </tr>
            </table>
        </div>

        <div class="XCLHandBar">
            <a href="@XCLCMS.View.AdminWeb.Common.WebCommon.RefferUrl" class="easyui-linkbutton" data-options="iconCls:'icon-back'">返回</a>
            @switch ((XCLNetTools.Enum.CommonEnum.HandleTypeEnum)ViewBag.CurrentHandleType)
            {
                case XCLNetTools.Enum.CommonEnum.HandleTypeEnum.ADD:
                    <a id="btnSave" class="easyui-linkbutton" data-options="iconCls:'icon-save'">保存</a>
                    break;
                case XCLNetTools.Enum.CommonEnum.HandleTypeEnum.UPDATE:
                    <a id="btnSave" class="easyui-linkbutton" data-options="iconCls:'icon-save'">保存修改</a>
                    if (XCLCMS.Lib.Permission.PerHelper.HasPermission(ViewBag.UserID, XCLCMS.Data.CommonHelper.Function.FunctionEnum.FriendLinks_Del))
                    {
                        <a id="btnDel" class="easyui-linkbutton" data-options="iconCls:'icon-cancel'">删 除</a>
                    }
                    break;
            }
        </div>
    </div>
</form>

<div class="XCLPanel" style="margin-top: 5px;">
    <div class="XCLPanelHeader XCLBolder">
        操作说明：
    </div>
    <div class="XCLPanelBody">
    </div>
</div>

<script type="text/javascript">
    require(["Lib/FriendLinks"], function (friendLinks) {
        $(function () {
            friendLinks.FriendLinksAdd.Init();
        });
    });
</script>